---
import "@fontsource/preahvihear"
import "../styles/global.css"
import Header from "../components/Header.astro"

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="relative text-black dark:text-white">
		<div
		 class="
		   absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-gray-50 dark:bg-[#11071F]
           bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(217,216,255,0.5),rgba(255,255,255,0.9))]
           dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(50,15,133,0.8),rgba(255,255,255,0))]
		 "
		>
		</div>
		<Header/>
		<slot />
	</body>
</html>

<style is:global>
	:root{
		color-scheme: light dark;
	}

	html{
	    font-family: 'Preahvihear', sans-serif;
		scroll-behavior: smooth;
	}

	body{
		/* color: rgba(17, 17, 17, 0.9); */
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		overscroll-behavior: none;
	}
</style>
